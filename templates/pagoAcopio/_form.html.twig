{% import 'macro/action.html.twig' as action %}
    <div class="row justify-content-around">
        <div class="col-5">
            <h1 class="text-primary bg-secondary.bg-gradient" >Acopio </h1>
            <div class="v-line">
                <hr>
            </div> 
            {{ action.frm_start(form1) }}
            {{ action.frm_column(
                action.frm_column_field_select(form1.periodo)
            ) }}
            {{ action.frm_column(
                action.frm_column_field_select(form1.socio)
            ) }}
            {{ action.frm_column(
                action.frm_column_field(form1.tikect)
            ) }}
            {{ action.frm_column(
                action.frm_column_field(form1.pesoBruto)
            ) }}
            {{ action.frm_column(
                action.frm_column_field(form1.pesoQuintales)
            ) }}
            {{ action.frm_column(
                action.frm_column_btn(button_label|default('Actualizar Acopio'))
            ) }}
            {{ action.frm_end(form1) }}
        </div>
        <div class="col-5">
            <h1 class="text-primary bg-secondary.bg-gradient" >Analisis Fisico </h1>
            <div class="v-line">
                <hr>
            </div> 
        </div>
    </div>
    <br />
    <h1 class="text-primary bg-secondary.bg-gradient" >Pago Acopio</h1>
    <div class="v-line">
        <hr>
    </div> 
    {{ action.frm_start(form) }}
    {{ action.frm_column(
        action.frm_column_field_date(form.fecha),null,null,null,2
    ) }}

    {{ action.frm_column(
        action.frm_column_field_number(form.precioBase),null,null,null,2
    ) }}
    {{ action.frm_column(
        action.frm_column_field_number(form.precioFinal),
        action.frm_column_field_number(form.pagoAcopio)
    ) }}
    {{ action.frm_column(
        action.frm_column_field(form.descripcion),
        action.frm_column_field_select(form.estadoPago)
    ) }}
    {{ action.frm_column(
        action.frm_column_btn(button_label|default('Finalizar')),
        null,
        null,
        null,
        2
    ) }}

{{ action.frm_end(form) }}