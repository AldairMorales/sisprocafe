{% extends 'base.html.twig' %}

{% block title %}Periodo index{% endblock %}

{% block body %}
    <h1>Periodo index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Alias</th>
                <th>Descripcion</th>
                <th>FechaInicio</th>
                <th>FechaFinal</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for periodo in periodos %}
            <tr>
                <td>{{ periodo.id }}</td>
                <td>{{ periodo.nombre }}</td>
                <td>{{ periodo.alias }}</td>
                <td>{{ periodo.descripcion }}</td>
                <td>{{ periodo.fechaInicio ? periodo.fechaInicio|date('Y-m-d') : '' }}</td>
                <td>{{ periodo.fechaFinal ? periodo.fechaFinal|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('periodo_show', {'id': periodo.id}) }}">show</a>
                    <a href="{{ path('periodo_edit', {'id': periodo.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('periodo_new') }}">Create new</a>
{% endblock %}
