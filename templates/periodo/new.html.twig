{% set _title = 'Periodo' %}
{% set _main_title = 'Nuevo' %}
{% set _section =  'periodo_index'%}

{% block _breadcrumb %}
    {{ breadcrumb.show2(_title,_section,'Nuevo') }}
{% endblock %}

{% block _main %}
    {{ include('periodo/_form.html.twig') }}
{% endblock %}

{% form_theme form _self %}

{% block _periodo_detalles_label %}
{% endblock %}

{% block _periodo_detalles_entry_widget %}
    {% import 'macro/action.html.twig' as actions %}
    <script src="{{ asset('js/select2.js') }}"></script>
    <script>
        jQuery(document).ready(function() {
            Select2();
        });
    </script>
