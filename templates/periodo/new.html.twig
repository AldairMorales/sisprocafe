        actions.frm_column_field_select(form.producto),
        actions.frm_column_field(form.humedadInicial)
    )}}
    {{ actions.frm_column(
        actions.frm_column_field(form.tara),
        actions.frm_column_field(form.muestra)
    )}}
    
