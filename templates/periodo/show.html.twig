{% block title %}Periodo{% endblock %}

{% block body %}
    <h1>Periodo</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ periodo.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ periodo.nombre }}</td>
            </tr>
            <tr>
                <th>Alias</th>
                <td>{{ periodo.alias }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
